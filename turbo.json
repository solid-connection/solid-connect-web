{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".output/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "VITE_*"]
    },
    "@solid-connect/web#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "sync:bruno": {
      "outputs": ["src/apis/**"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "lint:check": {
      "dependsOn": ["^lint:check"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["*.tsbuildinfo"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "ci:check": {
      "dependsOn": ["lint:check", "typecheck"],
      "outputs": []
    }
  }
}
